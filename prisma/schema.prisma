generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id        Int    @id @default(autoincrement())
  name      String @db.VarChar(11)
  contact   String @db.VarChar(13)
  username  String @db.VarChar(20)
  password  String @db.VarChar(100)
  role      String @default("member") @db.VarChar(20)
  // Relasi 1 to many
  shops     Shop[]
  @@map("User") //nama tabel di database
}

model Category{
  id            Int     @id @default(autoincrement())
  category_name String  @db.VarChar(50)
  //Relasi 1 to many
  products      Product[]
  @@map("Category")
}

model Shop{
  id            Int     @id @default(autoincrement())
  shop_name     String  @db.VarChar(100)
  description   String  @db.Text
  image         String  @db.VarChar(100)
  id_user       Int
  shop_contact  String  @db.VarChar(13)
  address       String  @db.Text

  //Relasi 1 to 1
  User          User    @relation(fields: [id_user], references: [id])

  //Relasi 1 to many
  products      Product[]

  @@map("Shop")
}

model Product{
  id            Int @id @default(autoincrement())
  category_id   Int
  product_name  String @db.VarChar(100)
  price         Int
  stock         Int 
  description   String @db.Text
  created_at    DateTime @default(now())
  shop_id       Int

  //Relasi 1 to 1
  Category      Category @relation(fields: [category_id], references: [id])

  //Relasi 1 to 1
  shop          Shop @relation(fields: [shop_id], references: [id])

  //Relasi 1 to many
  products_image ProductImage[]

  @@map("Product")
}

model ProductImage{
  id          Int @id @default(autoincrement())
  product_id  Int
  image_name  String @db.VarChar(100)

  //Relasi 1 to 1
  product     Product @relation(fields: [product_id], references: [id])

  @@map("product_image")
}


